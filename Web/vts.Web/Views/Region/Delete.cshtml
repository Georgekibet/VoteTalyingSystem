@model Vts.WebLib.ViewModels.RegionViewModel

@{
    ViewBag.Title = "Delete Region";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Region")">Regions</a></li>
    <li class="breadcrumb-item active">Delete Region</li>
</ol>
@{
    if (@ViewBag.AlertMessage != "")
    {
        <div id="alert" class="alert @ViewBag.AlertType" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <span>@ViewBag.AlertMessage</span>
        </div>
    }
}
<div class="layout-content-body">
    <div class="title-bar">
        <h1 class="title-bar-title">
            <span class="d-ib icon icon-map"></span>
            <span class="d-ib">Delete Region</span>
        </h1>
        <p class="title-bar-description">
            <small>Are you sure you want to delete this region?</small>
        </p>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-12">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Region.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Region.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Region.Code)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Region.Code)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Region.DateCreated)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Region.DateCreated)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Region.DateLastUpdated)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Region.DateLastUpdated)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Region.Status)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Region.Status)
                </dd>

            </dl>
        </div>
        <div class="col-md-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Delete" class="btn btn-default" /> &nbsp;
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            }
        </div>
    </div>
</div>

    
   